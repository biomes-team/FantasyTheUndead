<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Ectoplasm Resource -->
	<ThingDef ParentName="ResourceBase">
		<defName>BMT_Ectoplasm</defName>
		<label>ectoplasm</label>
		<description>A slime-like substance produced by spectral undead. It is the primary component in creating your own ghosts, wraiths, and more.</description>
		<possessionCount>20</possessionCount>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>BMT_FantasyTheUndead/Things/Item/Ectoplasm</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>0.85</drawSize>
		</graphicData>
		<stackLimit>150</stackLimit>
		<healthAffectsPrice>false</healthAffectsPrice>
		<intricate>true</intricate> <!-- Not returned to player when product made of this is smelted. -->
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<MarketValue>1.35</MarketValue>
			<Mass>0.05</Mass>
			<Beauty>1</Beauty>
			<Flammability>0.75</Flammability>
			<DeteriorationRate>1.0</DeteriorationRate>
		</statBases>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
		<tradeTags>
			<li>ExoticMisc</li>
		</tradeTags>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1.75</glowRadius>
				<glowColor>(113,138,190,0)</glowColor>
			</li>
		</comps>
		<allowedArchonexusCount>100</allowedArchonexusCount>
	</ThingDef>
  
  <!-- Rotting Flesh Resource -->
  <ThingDef ParentName="ResourceBase">
    <defName>BMT_RottingFlesh</defName>
    <label>rotting meat</label>
    <description>Meat from fleshy undead.</description>
    <graphicData>
      <texPath>BiomesCore_Things/Items/Meat/MeatFish</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>7</DeteriorationRate>
      <Mass>0.03</Mass>
      <MarketValue>2</MarketValue>
      <Nutrition>0.025</Nutrition>
    </statBases>
    <ingestible>
      <foodType>Meat</foodType>
      <preferability>RawTasty</preferability>
      <tasteThought>AteRawFish</tasteThought>
      <ingestEffect>EatMeat</ingestEffect>
      <ingestSound>RawMeat_Eat</ingestSound>
    </ingestible>
    <thingCategories>
      <li>MeatRaw</li>
    </thingCategories>
    <ingredient>
      <mergeCompatibilityTags>
        <li MayRequire="Ludeon.RimWorld.Ideology">MeatEating</li>
      </mergeCompatibilityTags>
    </ingredient>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>14</daysToRotStart>
      </li>
    </comps>
    <tickerType>Rare</tickerType>
  </ThingDef>
  
  <!-- Rotting Meat Thought Def -->
    <ThoughtDef>
    <defName>BMT_AteRottingFlesh</defName>
    <thoughtClass>Thought_FoodEaten</thoughtClass>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate rotting flesh</label>
        <description>I had to eat rotting flesh. I'm pretty sure some of it was previously human flesh!</description>
        <baseMoodEffect>-25</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <!-- Bones Resource --> 
  	<ThingDef ParentName="ResourceBase">
		<defName>BMT_Bones</defName>
		<label>bones</label>
		<description>Bones from various corpses. They are primarily used in creating new undead, especially skeletons.</description>
		<graphicData>
			<texPath>BiomesCore_Things/Items/Meat/MeatFish</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<stackLimit>50</stackLimit>
		<healthAffectsPrice>false</healthAffectsPrice>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<MarketValue>5</MarketValue>
			<Mass>1</Mass>
			<Flammability>0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
		</statBases>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
	</ThingDef>
	
	<!-- Souls Resource -->
  	<ThingDef ParentName="ResourceBase">
		<defName>BMT_Souls</defName>
		<label>soul</label>
		<description>Souls from the deceased. They are usually extracted through dark rituals. Liches devour them.</description>
		<graphicData>
			<texPath>BiomesCore_Things/Items/Meat/MeatFish</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<stackLimit>50</stackLimit>
		<healthAffectsPrice>false</healthAffectsPrice>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<MarketValue>25</MarketValue>
			<Mass>1</Mass>
			<Flammability>0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
		</statBases>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
	</ThingDef>
</Defs>