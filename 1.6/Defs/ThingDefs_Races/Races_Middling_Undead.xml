	<!-- Spectral Skull -->  
    <ThingDef ParentName="BMT_BaseUndead">
      <defName>BMT_SpectralSkull</defName>
      <label>spectral skull</label>
      <description>A spectral skull. It is semi-incorporeal, making it difficult but not impossible to hit. It tends to be more of an annoyance in combat than anything else.</description>
      <statBases>
        <MoveSpeed>4</MoveSpeed>
		<ArmorRating_Blunt>0.50</ArmorRating_Blunt>
		<ArmorRating_Sharp>0.50</ArmorRating_Sharp>		
		<ArmorRating_Heat>2.00</ArmorRating_Heat>
		<Flammability>0</Flammability>
		<MaxFlightTime>50</MaxFlightTime>
		<FlightCooldown>10</FlightCooldown>
      </statBases>
	  <tools>
	  <li>
		<label>Bonk</label>
		<capacities>
          <li>Blunt</li>
		</capacities>
		<power>5</power>
		<cooldownTime>2</cooldownTime>
		<linkedBodyPartsGroup>Head</linkedBodyPartsGroup>

	  </li>
	</tools>
      <race>
		<isImmuneToInfections>true</isImmuneToInfections>
		<bleedRateFactor>0.0</bleedRateFactor>
		<mechWeightClass>Medium</mechWeightClass>
      </race>
    </ThingDef>
    
