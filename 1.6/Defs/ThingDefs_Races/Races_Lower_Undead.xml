    <!-- Bloater -->  
    <ThingDef ParentName="BMT_BaseUndead">
      <defName>BMT_Bloater</defName>
      <label>bloater</label>
      <description>A disgusting and bulging wretch of an undead that produces a toxic and acidic explosion on death. Its limited melee attacks sometimes splatter acid from burst pustules onto enemies.</description>
      <statBases>
        <MoveSpeed>4.0</MoveSpeed>
      </statBases>
	  	<tools>
	  <li>
		<label>Arm</label>
		<capacities>
		  <li>Blunt</li>
		</capacities>
		<power>7</power>
		<cooldownTime>2</cooldownTime>
		<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
		<extraMeleeDamages>
		  <li>
			<def>Stun</def>
			<amount>8</amount>
			<chance>0.5</chance>
		  </li>
		  <li>
			<def>AcidBurn</def>
			<amount>5</amount>
			<chance>0.5</chance>
		  </li>
		</extraMeleeDamages>
	  </li>
	  <li>
		<label>Arm</label>
		<capacities>
		  <li>Blunt</li>
		</capacities>
		<power>7</power>
		<cooldownTime>2</cooldownTime>
		<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
		<extraMeleeDamages>
		  <li>
			<def>Stun</def>
			<amount>8</amount>
			<chance>0.5</chance>
		  </li>
		  <li>
			<def>AcidBurn</def>
			<amount>5</amount>
			<chance>0.5</chance>
		  </li>
		</extraMeleeDamages>
	  </li>
	</tools>
      <race>
	    <deathAction>
			<workerClass>DeathActionWorker_ToxCloud</workerClass>
        </deathAction>
		<isImmuneToInfections>true</isImmuneToInfections>
		<bleedRateFactor>0.0</bleedRateFactor>
      </race>
    </ThingDef>
    

