    <!-- Peasant -->  
    <ThingDef ParentName="BMT_BaseUndead">
      <defName>BMT_UndeadPeasant</defName>
      <label>peasant</label>
      <description>A simpleminded risen peasant. They are weak in combat but can do dumb labor and move nearly as fast as living humans.</description>
      <statBases>
        <MoveSpeed>4.25</MoveSpeed>
      </statBases>
      <race>
        <mechEnabledWorkTypes>
          <li>Hauling</li>
		  <li>Cleaning</li>
		  <li>BasicWorker</li>
        </mechEnabledWorkTypes>
		<isImmuneToInfections>true</isImmuneToInfections>
		<bleedRateFactor>0.0</bleedRateFactor>
