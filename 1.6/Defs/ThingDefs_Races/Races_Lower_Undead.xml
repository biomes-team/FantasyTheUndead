	  <li>
		<label>Arm</label>
		<capacities>
		  <li>Blunt</li>
		</capacities>
		<power>7</power>
		<cooldownTime>2</cooldownTime>
		<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
		<extraMeleeDamages>
		  <li>
			<def>Stun</def>
			<amount>8</amount>
			<chance>0.5</chance>
		  </li>
		  <li>
			<def>AcidBurn</def>
			<amount>5</amount>
			<chance>0.5</chance>
		  </li>
		</extraMeleeDamages>
	  </li>
	  <li>
		<label>Arm</label>
		<capacities>
		  <li>Blunt</li>
		</capacities>
		<power>7</power>
		<cooldownTime>2</cooldownTime>
