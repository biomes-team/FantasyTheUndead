		<!-- Blight Dragon -->  
    <ThingDef ParentName="BMT_BaseUndead">
      <defName>BMT_BlightDragon</defName>
      <label>blight dragon</label>
      <description>A dragon resurrected by accursed necromancy. Its flesh is visibly decayed yet it can still fly and breathe noxious gas (or acid) upon targets.</description>
      <statBases>
        <MoveSpeed>3.25</MoveSpeed>
		<ArmorRating_Blunt>0.70</ArmorRating_Blunt>
		<ArmorRating_Sharp>0.45</ArmorRating_Sharp>		
		<ArmorRating_Heat>1</ArmorRating_Heat>
		<Flammability>0</Flammability>
		<MaxFlightTime>150</MaxFlightTime>
		<FlightCooldown>25</FlightCooldown>
      </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <labelNoLocation>claw</labelNoLocation>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right claw</label>
        <labelNoLocation>claw</labelNoLocation>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>ToxicBite</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
      <race>
		<isImmuneToInfections>true</isImmuneToInfections>
		<bleedRateFactor>0.0</bleedRateFactor>
		<mechWeightClass>Medium</mechWeightClass>
		<canFlyInVacuum>true</canFlyInVacuum>
		<body>BMT_Dragonbody</body>
      </race>
    <butcherProducts>
      <Leather_Lizard>15</Leather_Lizard>
    </butcherProducts>	  
